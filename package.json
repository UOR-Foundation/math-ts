{
  "name": "@uor-foundation/math-ts",
  "version": "0.2.0",
  "description": "Mathematical Universe implementation - where mathematics computes itself into existence",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:tsc": "tsc --build",
    "test": "lerna run test",
    "test:coverage": "jest --coverage",
    "test:integration": "lerna run test:integration",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "typecheck": "lerna run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "lerna run dev --parallel",
    "clean": "lerna run clean && rm -rf node_modules",
    "clean:build": "tsc --build --clean",
    "docs:build": "typedoc",
    "test:field-substrate": "npm run test --workspace=@uor-foundation/field-substrate",
    "test:resonance": "npm run test --workspace=@uor-foundation/resonance",
    "test:topology": "npm run test --workspace=@uor-foundation/topology",
    "test:operators": "npm run test --workspace=@uor-foundation/operators",
    "test:algebra": "npm run test --workspace=@uor-foundation/algebra",
    "test:geometry": "npm run test --workspace=@uor-foundation/geometry",
    "test:calculus": "npm run test --workspace=@uor-foundation/calculus",
    "test:self-reference": "npm run test --workspace=@uor-foundation/self-reference",
    "test:core": "npm run test --workspace=@uor-foundation/math-ts-core",
    "test:embeddings": "npm run test --workspace=@uor-foundation/embeddings"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UOR-Foundation/math-ts.git"
  },
  "keywords": [
    "mathematics",
    "computational-universe",
    "self-reference",
    "number-theory",
    "typescript"
  ],
  "author": "UOR Foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UOR-Foundation/math-ts/issues"
  },
  "homepage": "https://github.com/UOR-Foundation/math-ts#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "lerna": "^8.1.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
